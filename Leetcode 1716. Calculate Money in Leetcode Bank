class Solution {
public:
    int totalMoney(int n) {
        int ans = 0;
        int monday = 1;
        int day = 0;
        for(int i =1;i<=n;i++){
            ans+=monday+day;
            day++;
            if(day == 7){
                monday++;
                day = 0;
            }
        }
        return ans;
    }
};
